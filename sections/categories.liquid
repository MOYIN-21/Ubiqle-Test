<section class="py-16 ">
  <!-- Top Banner -->
  <div class="container mx-auto bg-[#232321]">
    <p class="text-base sm:text-lg md:text-xl lg:text-2xl font-normal text-[#FEFEFE] flex flex-wrap justify-center text-center py-6">
      <span class="mx-2 sm:mx-4">SOLD ONLY IN PREMIUM QUALITY</span> |
      <span class="mx-2 sm:mx-4">SUBSCRIBE TO OUR CARE PROGRAM</span> |
      <span class="mx-2 sm:mx-4">FREE RETURNS EVEN AFTER 2 WEEKS</span>
    </p>

    <!-- Categories Header -->
    <div class="flex flex-col mt-12 pl-20">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-6 sm:gap-0">
        <div class="text-[#FFFFFF] font-semibold text-4xl sm:text-6xl lg:text-7xl text-center sm:text-left">
          CATEGORIES
        </div>
        <div class="flex flex-row gap-4 px-8">
          <div class="w-10 h-10 bg-[#E7E7E3] border-2 rounded-[8px] flex justify-center items-center cursor-pointer">
            <span class="text-[#232321]">&lt;</span>
          </div>
          <div class="w-10 h-10 bg-[#E7E7E3] border-2 border-white rounded-[8px] flex justify-center items-center cursor-pointer">
            <span class="text-[#232321]">&gt;</span>
          </div>
        </div>
      </div>

      <!-- Categories Content -->
      <div class="flex flex-col pl-2 lg:flex-row w-full mt-10 gap-8 lg:gap-0">

        <!-- Left Category Card with Size Selector -->
        <div class="bg-[#ECEEF0] rounded-tl-[40px] lg:rounded-tl-[60px] py-10 sm:py-14 px-6 sm:px-10 w-full lg:w-1/2 flex flex-col gap-6">
          <!-- Size Header -->
          <div class="flex justify-between items-center flex-wrap gap-2">
            <span class="font-semibold text-sm sm:text-base text-[#232321]">SIZE</span>
            <a href="#" class="underline text-xs sm:text-sm font-medium text-[#232321]">SIZE CHART</a>
          </div>

          <!-- Size Buttons -->
          <div class="flex flex-wrap gap-2">
            {% assign sizes = "38,39,40,41,42,43,44,45,46" | split: "," %}
            {% for size in sizes %}
              <button
                      class="size-btn px-3 py-1 h-10 w-10 sm:h-12 sm:w-12 cursor-pointer text-sm sm:text-base rounded
                  {% if size == '38' %} bg-black text-white {% else %} bg-white text-black {% endif %}"
                      data-size="{{ size }}">
                {{ size }}
              </button>
            {% endfor %}
          </div>

          <!-- Shoe Image and Title -->
          <div class="p-4 sm:p-6 relative">
            <img src="{{ 'icon-first sneakers.png' | asset_url }}" alt="Shoe" class="mx-auto object-contain max-h-40 sm:max-h-52 lg:max-h-64" />
            <h3 class="text-2xl sm:text-3xl lg:text-4xl text-[#232321] font-semibold font-rubik mt-4">
              LIFESTYLES <br class="hidden sm:block"> SHOES
            </h3>
            <a href="{{ section.blocks[0].settings.link }}" class="absolute bottom-2 right-2 sm:bottom-4 sm:right-4 w-8 h-8 sm:w-10 sm:h-10 bg-[#232321] text-white rounded flex items-center justify-center">↗</a>
          </div>
        </div>

        <!-- Right Category Card -->
        <div class="bg-white px-6 sm:px-10 lg:px-14 w-full lg:w-1/2 relative flex flex-col justify-center">
          <img src="{{ 'icon-first sneakers.png' | asset_url }}" alt="Shoe" class="mx-auto object-contain max-h-40 sm:max-h-52 lg:max-h-72" />
          <h3 class="text-2xl sm:text-3xl lg:text-4xl text-[#232321] font-semibold font-rubik mt-4 text-center lg:text-left">
            BASKETBALL <br class="hidden sm:block"> SHOES
          </h3>
          <a href="{{ section.blocks[0].settings.link }}" class="absolute bottom-2 right-2 sm:bottom-4 sm:right-4 w-8 h-8 sm:w-10 sm:h-10 bg-[#232321] text-white rounded flex items-center justify-center">↗</a>
        </div>

      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Categories Section",
  "blocks": [
    {
      "type": "category_card",
      "name": "Category Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Categories Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}


<!-- Styling for active size -->
<style>
  .size-btn.active {
    background-color: black !important;
    color: white !important;
  }
</style>

<!-- Script for size selection -->
<script>
  document.addEventListener("DOMContentLoaded", function() {
    document.querySelectorAll(".size-btn").forEach(function(btn) {
      btn.addEventListener("click", function() {
        let buttons = btn.parentElement.querySelectorAll(".size-btn");
        buttons.forEach(b => b.classList.remove("active"));
        btn.classList.add("active");
      });
    });
  });
</script>
