<header class="w-full border-gray-200 bg-[#FAFAFA] overflow-x-hidden px-8">
  <nav class="container mx-auto h-16 flex justify-between items-center px-6">
    <!-- Left Menu -->
    <ul class="flex items-center gap-6 text-sm font-medium">
      <li><a href="/collection" class="text-[#232321] text-base font-semibold">New Drops ðŸ”¥</a></li>
      <li><a href="/collection" class="text-[#232321] text-base font-semibold">Men</a></li>
      <li><a href="/collection" class="text-[#232321] text-base font-semibold">Women</a></li>
    </ul>

    <!-- Logo -->
    <div class="flex justify-center items-center">
      <a href="/#"> 
       <img
          class="block w-full h-full object-center object-cover cursor-pointer"
          src="{{ 'icon-logo.svg' | asset_url }}"
          alt="Logo Image"
          width=""
          height=""
        /> 
    </a>
      
      {% comment %} <a href="/" class="text-2xl font-extrabold tracking-widest">KICKS</a> {% endcomment %}
    </div>

    <!-- Right Icons -->
    <div class="flex items-center gap-6">
      <!-- Search -->
      <button class="hover:text-gray-600">
         <img
          class="block w-full h-[28px] w-[28px] object-center object-cover"
          src="{{ 'icon-search.svg' | asset_url }}"
          alt="Search-icon Image"
          width=""
          height=""
        /> 
      </button>

      <!-- User -->
      <button class="hover:text-gray-600">
         <img
          class="block w-full h-[24px] w-[24px] object-center object-cover"
          src="{{ 'icon-user.svg' | asset_url }}"
          alt="Profile-image"
          width=""
          height=""
        /> 
      </button>

      <div class="relative">
        <span class="absolute -top-4 bg-[#FFA52F] text-black text-xs font-bold w-5 h-[32px] w-[32px] rounded-full flex items-center justify-center">0</span>
      </div>
    </div>
  </nav>
</header>


