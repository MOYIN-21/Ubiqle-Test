
<section class="py-12 ">
  <div class="container mx-auto">
    <div class="bg-[#4A69E2] md:mt-[100px] rounded-[28px] px-6 md:px-20 py-12 md:py-16">

      <div class="flex flex-col md:flex-row justify-between items-center gap-8">

        <!-- Left content -->
        <div class="flex flex-col gap-4 text-center md:text-left">
          <p class="text-white font-semibold font-rubik text-3xl md:text-5xl leading-tight max-w-3xl">
            JOIN OUR KICKSPLUS <br>
            <span class="block">CLUB & GET 15% OFF</span>
          </p>

          <p class="text-[#E7E7E3] text-lg md:text-xl font-semibold">
            Sign up for free! Join the community.
          </p>

          <!-- Email Input + Button -->
          <div class="flex flex-col sm:flex-row gap-3 sm:gap-2 justify-center md:justify-start">
            <input
                    type="email"
                    id="email"
                    class="outline-none border border-[#FFFFFF] text-[#FFFFFF] placeholder-[#E7E7E3] text-sm rounded-lg w-full sm:w-80 h-12 p-2.5 bg-transparent"
                    placeholder="Email address"
                    required
            />

            {% render 'button',
                    link: '/#',
                    text: 'SUBMIT',
                    extra_classes: 'bg-[#232321] text-[#FFFFFF] h-12 w-full sm:w-auto'
            %}
          </div>
        </div>

        <!-- Right side (logo) -->
        <div class="flex justify-center items-center w-32 md:w-48">
          <a href="/#">
            <img
                    class="block w-full h-auto object-contain cursor-pointer"
                    src="{{ 'icon-whiteLogo.svg' | asset_url }}"
                    alt="Logo Image"
            />
          </a>
        </div>
      </div>

    </div>
  </div>
</section>




{% schema %}
{
  "name": "Community Section",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "JOIN OUR KICKSPLUS CLUB & GET 15% OFF"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Sign up for free! Join the community."
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ],
  "presets": [
    {
      "name": "Community"
    }
  ]
}
{% endschema %}
